<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="break_btn">
        <item name="android:background">@color/green_color</item>
        <item name="android:textColorHighlight">@color/green_color</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="clear_btn_breakOverview">
        <item name="android:background">@color/scarlet_red</item>
        <item name="android:textColorHighlight">@color/scarlet_red</item>
        <item name="android:textColor">@color/white_text_color</item>
    </style>

</resources>